<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_sheet">
    <View
        android:layout_width="70dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/darker_gray"
        />
    <TextView
        android:id="@+id/tvNewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT COURSE"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/edtNameCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:hint="The course's name"
       />

    <TextView
        android:id="@+id/tvDateCourse"
        android:layout_width="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:paddingLeft="5dp"
        android:hint="Opening course's date(yyyy/MM/dd)"
        android:layout_height="wrap_content"/>
    <EditText
    android:id="@+id/edtMoneyCourse"
    android:layout_width="match_parent"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    android:hint="School fees"
    android:inputType="number"
    android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtLesson"
        android:layout_width="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:hint="Number of lesson"
        android:layout_height="wrap_content"
        android:inputType="number"/>
    <Button
        android:id="@+id/btnAdd"
        android:text="Add"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"
        android:background="@drawable/khungedt"
        android:layout_width="150dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>

</LinearLayout>