<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="70dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/darker_gray"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageproduct_bot"
            android:layout_width="120dp"
            android:layout_marginTop="20dp"
            android:layout_height="120dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titleproduct_bot"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Best BCAA 30 lần dùng"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Nhà sản xuất: BPI SPORT
Dòng sản phẩm: Amino Acid
Số lượng sản phẩm trong kho: 2-3 Days"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/motaProduct"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="775.000đ"
            android:id="@+id/moneyproduct_bot"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:id="@+id/addtocart"
            android:background="@drawable/khungchange"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/buyproduct"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Buy now"
            android:layout_marginLeft="10dp"
            android:background="@drawable/khungchange"
            android:textColor="#ffffff"/>
    </LinearLayout>
</LinearLayout>